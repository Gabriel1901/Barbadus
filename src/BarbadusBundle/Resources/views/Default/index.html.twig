{% extends "base.html.twig" %}

{% block body %}

    <div class="container">

        <div>
            <h1>Agendamento de Horários</h1>
        </div>
        <div class="row form-group">
            <div class="col-xs-12">
                <ul class="nav nav-pills nav-justified thumbnail setup-panel">
                    <li class="active"><a href="#step-1">
                            <h4 class="list-group-item-heading">Selecione um Serviço</h4>
                            <p class="list-group-item-text">First step description</p>
                        </a></li>
                    <li class="disabled"><a href="#step-2">
                            <h4 class="list-group-item-heading">Selecione um Profissional</h4>
                            <p class="list-group-item-text">Second step description</p>
                        </a></li>
                    <li class="disabled"><a href="#step-3">
                            <h4 class="list-group-item-heading">Selecione um horário</h4>
                            <p class="list-group-item-text">Third step description</p>
                        </a></li>
                    <li class="disabled"><a href="#step-4">
                            <h4 class="list-group-item-heading">Confirmar</h4>
                            <p class="list-group-item-text">Third step description</p>
                        </a></li>
                </ul>
            </div>
        </div>
        <div class="row setup-content" id="step-1">
            <div class="col-xs-12">
                <div class="col-md-12 well text-center">
                    <h1>Seviços disponíveis</h1>
                    <select class="form-control">
                        {% for opcao in servicos %}
                            <option value id="{{ opcao.id }}">{{ opcao.nome }}</option>
                        {% endfor %}
                    </select>
                    <br>
                    <button id="activate-step-2" class="btn btn-primary btn-lg">Proximo passo</button>
                </div>
            </div>
        </div>
        <div class="row setup-content" id="step-2">
            <div class="col-xs-12">
                <div class="col-md-12 well">
                    <h1 class="text-center"> Profissionais</h1>

                    <div class="radio">
                        <label>
                            <input type="radio" name="profSelecionado"  value="1">
                            Option one is this and that&mdash;be sure to include why it's great
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="profSelecionado" value="2">
                            Option one is this and that&mdash;be sure to include why it's great
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row setup-content" id="step-3">
            <div class="col-xs-12">
                <div class="col-md-12 well">
                    <h1 class="text-center">Selecione o horário</h1>
                </div>
            </div>
        </div>
        <div class="row setup-content" id="step-4">
            <div class="col-xs-12">
                <div class="col-md-12 well">
                    <h1 class="text-center">Confirme </h1>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}

    <script src="/js/agendamento.js" type="text/javascript"></script>
{% endblock %}

